<%- include header %>
<form method="post">
	标题：<br/>
	<input type="text" name="title" value="<%= post.title %>" /><br/>
	标签：<br/>
	<%if(!post.tag){post.tag=[]}%>
	<input type="text" name="tag1" value="<%= post.tag[0] %>" /><br/>
	<input type="text" name="tag2" value="<%= post.tag[1] %>" /><br/>
	<input type="text" name="tag3" value="<%= post.tag[2] %>" /><br/>
	正文：<br/>
	<textarea name="post" cols="100" rows="20"><%= post.post %></textarea><br/>
	<input type="submit" value="保存修改"/>
</form>
<%- include footer %>